{
  "id": "apt",
  "os": "linux",
  "label": "APT",
  "description": "Package manager",
  "running": [
    {
      "type": "exe",
      "#text": "apt-get"
    },
    {
      "type": "exe",
      "#text": "synaptic"
    }
  ],
  "option": [
    {
      "id": "clean",
      "label": {
        "translate": "false",
        "#text": "clean"
      },
      "description": "Delete the cache",
      "action": [{ "command": "apt.clean" }]
    },
    {
      "id": "autoclean",
      "label": {
        "translate": "false",
        "#text": "autoclean"
      },
      "description": "Delete obsolete files",
      "action": [{ "command": "apt.autoclean" }]
    },
    {
      "id": "autoremove",
      "label": {
        "translate": "false",
        "#text": "autoremove"
      },
      "description": "Delete obsolete files",
      "action": [{ "command": "apt.autoremove" }]
    },
    {
      "id": "package_lists",
      "label": "Package lists",
      "description": "Delete the cache",
      "action": [{
        "command": "delete",
        "search": "walk.all",
        "path": "/var/lib/apt/lists/"
      }]
    }
  ]
}