{
  "id": "adobe_reader",
  "label": "Adobe Reader",
  "description": "Document viewer",
  "running": {
    "type": "exe",
    "#text": "acroread"
  },
  "option": [
    {
      "id": "cache",
      "label": "Cache",
      "description": "Delete the cache",
      "action": [
        {
          "command": "delete",
          "search": "walk.files",
          "path": "~/.adobe/Acrobat/*/Cache"
        },
        {
          "command": "delete",
          "search": "walk.files",
          "path": "$localappdata\\Adobe\\Acrobat\\*\\Cache"
        },
        {
          "command": "delete",
          "search": "glob",
          "path": "$USERPROFILE\\AppData\\LocalLow\\Adobe\\Acrobat\\9.0\\Search\\*.idx"
        }
      ]
    },
    {
      "id": "mru",
      "label": "Most recently used",
      "description": "Delete the list of recently used documents",
      "action": [
        {
          "command": "delete",
          "search": "file",
          "path": "~/.adobe/Acrobat/*/Preferences/reader_prefs"
        },
        {
          "command": "winreg",
          "path": "HKCU\\Software\\Adobe\\Acrobat Reader\\5.0\\AVGeneral\\cRecentFiles"
        },
        {
          "command": "winreg",
          "path": "HKCU\\Software\\Adobe\\Acrobat Reader\\6.0\\AVGeneral\\cRecentFiles"
        },
        {
          "command": "winreg",
          "path": "HKCU\\Software\\Adobe\\Acrobat Reader\\7.0\\AVGeneral\\cRecentFiles"
        },
        {
          "command": "winreg",
          "path": "HKCU\\Software\\Adobe\\Acrobat Reader\\8.0\\AVGeneral\\cRecentFiles"
        },
        {
          "command": "winreg",
          "path": "HKCU\\Software\\Adobe\\Acrobat Reader\\9.0\\AVGeneral\\cRecentFiles"
        },
        {
          "command": "winreg",
          "path": "HKCU\\Software\\Adobe\\Acrobat Reader\\10.0\\AVGeneral\\cRecentFiles"
        },
        {
          "command": "winreg",
          "path": "HKCU\\Software\\Adobe\\Acrobat Reader\\11.0\\AVGeneral\\cRecentFiles"
        }
      ]
    },
    {
      "id": "tmp",
      "label": "Temporary files",
      "description": "Delete the temporary files",
      "action": [{
        "command": "delete",
        "search": "glob",
        "path": "/dev/shm/sem.ADBE_*_$LOGNAME"
      }]
    }
  ]
}